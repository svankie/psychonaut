<%= form_tag experiences_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Buscar", name: nil %>
  </p>
<% end%>

<div id="experiences">
  <% @experiences.each do |experience| %>
    <h2><%= link_to experience.title, experience %></h2>
    <div class="info">
      by <strong><%= experience.pseudonym %></strong>
      on <%= experience.happened_at %>
    </div>
    <div class="content">
      <%= experience.report %>
    </div>
  <% end%>
</div>
